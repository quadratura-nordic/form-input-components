{
  "name": "form-input-components",
  "version": "2.0.0",
  "files": [
    "dist"
  ],
  "author": "Quadratura Nordic",
  "description": "Form input components for Vue 3",
  "license": "MIT",
  "main": "./dist/form-input-components.common.js",
  "module": "./dist/form-input-components.umd.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/form-input-components.umd.js",
      "require": "./dist/form-input-components.umd.js",
      "default": "./dist/form-input-components.common.js"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quadratura-nordic/form-input-components"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name form-input-components lib/main.ts && vue-tsc --emitDeclarationOnly ",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "hammerjs": "^2.0.8",
    "luxon": "^3.3.0",
    "vue": "^3.2.13",
    "vue-tsc": "^1.2.0"
  },
  "devDependencies": {
    "@types/hammerjs": "^2.0.41",
    "@types/luxon": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "i": "^0.3.7",
    "npm": "^9.6.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "typescript": "~4.5.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    }
  }
}
